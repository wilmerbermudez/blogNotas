<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock title %} </title>
        
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <style>
                .example-wrapper { margin: 1em auto; max-width: 800px; width: 100%;}
                .example-wrapper code { background: #F5F5F7; padding: 2px 6px;}
                
            </style>
            <link href="{{ asset('css/footer.css') }}" rel="stylesheet">
            <link href="{{ asset('css/header.css') }}" rel="stylesheet">
            <link href="{{ asset('css/body.css') }}" rel="stylesheet">
        {% endblock %}

    </head>
    <body>
        
        {% block header %}
            <header>
                <nav>
                        <ul>
                            <li><a href="{{ path('app_home') }}">HOME</a></li>
                            <li><a href="{{ path('app_blog') }}">BLOG</a></li>
                            <li><a href="{{ path('app_contacto') }}">CONTACTO</a></li>
                            <li><a href="{{ path('registro') }}">REGISTRO</a></li>
                            <li><a href="{{ path('app_login') }}">lOGIN</a></li><br><br><br>
                        </ul>   
                   
                </nav>
            </header>
        {% endblock %}
        {% block body %} 
        {% endblock %}
        {% block footer %}
            <footer>
                <div class="footer-content">
                     <h3>Developer</h3>
                     <p>Desarrollo de un Blog con las noticias Presidenciales mas importantes del momento</p>
                </div>
            </footer>
     {% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>